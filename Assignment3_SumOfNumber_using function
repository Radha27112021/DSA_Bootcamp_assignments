#include <iostream>
using namespace std;
int sum(int n1, int n2, int n3)
{
    return n1 + n2 + n3;
}
int main()
{
    int num1, num2, num3;
    cout << "Enter the first number ";
    cin >> num1;
    cout << "Enter the second number ";
    cin >> num2;
    cout << "Enter the third number ";
    cin >> num3;
    cout << "Sum of all 3 numbers are : ";
    cout << sum(num1, num2, num3);
    return 0;
}
